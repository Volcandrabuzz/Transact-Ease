<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:background="#201F1F"
    android:gravity="center"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:src="@drawable/custo"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btnViewAllCustomers"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/view_all_customers"
        tools:ignore="VisualLintButtonSize" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:src="@drawable/reccord"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/btnTransactionTrackRecord"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:clickable="true"
        android:text="@string/transaction_track_record"
        tools:ignore="VisualLintButtonSize" />

</LinearLayout>
